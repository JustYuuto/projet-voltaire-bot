{
  "name": "Projet Voltaire Bot",
  "description": "Un bot pour faire le Projet Voltaire Ã  votre place :p",
  "version": "1.0.0",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "webRequest"
  ],
  "host_permissions": [
    "https://www.projet-voltaire.fr/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.projet-voltaire.fr/*"],
      "js": ["content_script.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {}
}